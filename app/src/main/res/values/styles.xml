<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppThemefit" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#000</item>
    </style>
    <style name="AppBaseTheme" parent="AppTheme"></style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Log" parent="AppTheme">
        <item name="android:typeface">monospace</item>

        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>


    <style name="AppTheme1" parent="android:Theme.Holo.Light.DarkActionBar"></style>
    <style name="DefaultTextViewLeftSide">
        <item name="android:layout_width">wrap_content</item> <!-- WAS match_parent -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#A000</item> <!-- WAS #5000 -->
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20dp</item> <!-- WAS 29 -->
    </style>

    <style name="DefaultTextViewRightSide">
        <item name="android:layout_width">wrap_content</item> <!-- WAS match_parent -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#A000</item> <!-- WAS #5000 -->
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right</item>
        <item name="android:onClick">onClickGoToEditStats</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">15dp</item>
        <item name="android:visibility">visible</item>
    </style>
    <style name="ImageButtonWithText" parent="@android:style/Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">22sp</item>
        <item name="android:drawablePadding">0sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#005941</item>
        <item name="android:clickable">true</item>
    </style>


</resources>